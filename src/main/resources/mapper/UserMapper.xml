<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapepr 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.refuse.mapper.UserMapper">



    <select id="queryById" resultType="com.example.refuse.entity.User">
        select * from user where openid = #{openid}
    </select>

    <insert id="insert" parameterType="com.example.refuse.entity.User">
        insert into user (
                        openid,
                        skey,
                        create_time,
                        last_visit_time,
                        session_key,
                        avatar_url,
                        city,
                        province,
                        country,
                        gender,
                        nick_name
        )
        values(
               #{openid},
               #{skey},
               #{createTime},
               #{lastVisitTime},
               #{sessionKey},
               #{avatarUrl},
               #{city},
               #{province},
               #{country},
               #{gender},
               #{nickName}
              )
    </insert>

    <update id="updateUser" parameterType="com.example.refuse.entity.User">
       update user
       <set>
           <if test="lastVisitTime != null">
               last_visit_time = #{lastVisitTime},
           </if>
           <if test="skey != null">
               skey=#{skey},
           </if>
       </set>
    </update>

</mapper>